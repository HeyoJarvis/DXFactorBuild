{
  "name": "@heyjarvis/desktop2",
  "version": "2.0.0",
  "description": "HeyJarvis Desktop v2 - Modern React + Electron architecture",
  "main": "main/index.js",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "wait-on tcp:5173 && electron .",
    "restart": "./restart-dev.sh",
    "build": "npm run build:renderer && npm run build:electron",
    "build:renderer": "vite build",
    "build:electron": "electron-builder",
    "preview": "vite preview",
    "lint": "eslint . --ext js,jsx",
    "format": "prettier --write \"**/*.{js,jsx,json,css,md}\""
  },
  "dependencies": {
    "@heyjarvis/core": "file:../core",
    "@heyjarvis/data": "file:../data",
    "@octokit/app": "^16.1.1",
    "@octokit/auth-app": "^8.1.1",
    "@octokit/rest": "^22.0.0",
    "@slack/bolt": "^4.4.0",
    "@slack/web-api": "^7.10.0",
    "@supabase/supabase-js": "^2.80.0",
    "axios": "^1.6.7",
    "dotenv": "^17.2.2",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "framer-motion": "^12.23.24",
    "html-to-image": "^1.11.13",
    "lucide-react": "^0.546.0",
    "node-fetch": "^2.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.1",
    "reactflow": "^11.11.4",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "prettier": "^3.1.1",
    "vite": "^5.0.11",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.heyjarvis.desktop2",
    "productName": "HeyJarvis",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main/**/*",
      "renderer2/dist/**/*",
      "bridge/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "category": "Office",
      "target": [
        "AppImage",
        "deb"
      ],
      "executableName": "heyjarvis",
      "synopsis": "AI-powered competitive intelligence platform",
      "description": "HeyJarvis Desktop - Your AI assistant for competitive intelligence and workflow automation",
      "desktop": {
        "Name": "HeyJarvis",
        "Type": "Application",
        "Terminal": "false",
        "Categories": "Office;Utility;"
      }
    }
  }
}
