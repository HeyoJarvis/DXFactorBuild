{
  "name": "@heyjarvis/desktop",
  "version": "1.0.0",
  "description": "HeyJarvis Desktop Dashboard - Electron app for competitive intelligence monitoring",
  "main": "main.js",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "electron . --dev",
    "dev:renderer": "webpack serve --config webpack.renderer.config.js --mode development",
    "build": "npm run build:renderer && npm run build:main",
    "build:main": "webpack --config webpack.main.config.js --mode production",
    "build:renderer": "webpack --config webpack.renderer.config.js --mode production",
    "package": "electron-builder",
    "package:win": "electron-builder --win",
    "package:mac": "electron-builder --mac",
    "package:linux": "electron-builder --linux",
    "test": "jest",
    "lint": "eslint ."
  },
  "dependencies": {
    "@heyjarvis/core": "file:../core",
    "@heyjarvis/data": "file:../data",
    "@slack/bolt": "^4.4.0",
    "@slack/web-api": "^7.10.0",
    "dotenv": "^17.2.2",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "winston": "^3.11.0",
    "axios": "^1.6.7",
    "lodash": "^4.17.21",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "html-webpack-plugin": "^5.6.0",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3",
    "babel-loader": "^9.1.3",
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.8",
    "@babel/preset-react": "^7.23.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.1",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0"
  },
  "build": {
    "appId": "com.heyjarvis.desktop",
    "productName": "HeyJarvis",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main/**/*",
      "renderer/dist/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns"
    },
    "win": {
      "icon": "assets/icon.ico"
    },
    "linux": {
      "icon": "assets/icon.png",
      "category": "Office"
    }
  },
  "keywords": [
    "electron",
    "desktop",
    "competitive-intelligence",
    "dashboard"
  ]
}
