{
  "name": "heyjarvis",
  "version": "1.0.0",
  "description": "AI-powered competitive intelligence platform that delivers hyper-relevant signals to your workflow",
  "main": "desktop/main/app-lifecycle.js",
  "private": true,
  "workspaces": [
    "desktop",
    "delivery",
    "core",
    "data",
    "admin",
    "compliance",
    "infrastructure"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:desktop\" \"npm run dev:delivery\" \"npm run dev:admin\"",
    "dev:desktop": "cd desktop && npm run dev",
    "dev:delivery": "cd delivery && npm run dev",
    "dev:admin": "cd admin && npm run dev",
    "build": "npm run build:desktop && npm run build:delivery && npm run build:admin",
    "build:desktop": "cd desktop && npm run build",
    "build:delivery": "cd delivery && npm run build",
    "build:admin": "cd admin && npm run build",
    "test": "npm run test:e2e && npm run test:load && npm run test:compliance",
    "test:e2e": "cd tests && npm run test:e2e",
    "test:load": "cd tests && npm run test:load",
    "test:compliance": "cd tests && npm run test:compliance",
    "setup": "npm install && npm run setup:workspaces",
    "setup:workspaces": "npm run setup:desktop && npm run setup:delivery && npm run setup:admin",
    "setup:desktop": "cd desktop && npm install",
    "setup:delivery": "cd delivery && npm install",
    "setup:admin": "cd admin && npm install"
  },
  "keywords": [
    "competitive-intelligence",
    "ai",
    "signals",
    "slack",
    "electron",
    "enterprise"
  ],
  "author": "HeyJarvis Team",
  "license": "UNLICENSED",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^38.1.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
